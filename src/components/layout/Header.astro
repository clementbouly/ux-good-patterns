---
import ThemeToggle from "@/components/ThemeToggle";
import CommandMenu from "@/components/CommandMenu";
import { MobileNav } from "@/components/MobileNav";
import { LanguageSwitcher } from "@/components/LanguageSwitcher";
import { getNavLinks } from "@/utils/navigation";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromLocale, useTranslations, type Lang } from "@/i18n";

// Use Astro's native currentLocale
const lang = getLangFromLocale(Astro.currentLocale) as Lang;
const t = useTranslations(lang);
const otherLang = lang === "en" ? "fr" : "en";

// Use Astro's native getRelativeLocaleUrl for the language switch
const currentPathWithoutLocale = Astro.url.pathname.replace(/^\/(fr|en)/, "") || "/";
const switchLangUrl = getRelativeLocaleUrl(otherLang, currentPathWithoutLocale);

const navLinks = getNavLinks(Astro.url.pathname, lang);
const isHome = Astro.url.pathname === "/" || Astro.url.pathname === "" || Astro.url.pathname === "/fr" || Astro.url.pathname === "/fr/";
const homeHref = getRelativeLocaleUrl(lang, "/");
---

<!-- Mobile sticky nav -->
<div
  class="sticky top-0 z-50 flex items-center justify-between gap-2 border-b bg-[#171717] px-4 py-2 text-white md:hidden"
>
  <MobileNav client:load navLinks={navLinks} />
  <div class="flex items-center gap-2">
    <LanguageSwitcher client:load currentLang={lang} switchUrl={switchLangUrl} />
    <CommandMenu client:load variant="icon" />
    <ThemeToggle client:load />
  </div>
</div>

<header class="border-b bg-[#171717] text-white md:border-b-0">
  <div
    class="container mx-auto flex items-start justify-between px-4 py-6 md:pt-6"
  >
    <div>
      {
        isHome ? (
          <h1 class="text-3xl font-bold md:text-5xl">
            The Good, The Bad and The U<a href="/demo-complicity" class="hover:text-white/80">X</a>
          </h1>
        ) : (
          <a href={homeHref} class="hover:opacity-80">
            <p class="text-3xl font-bold md:text-5xl">
              The Good, The Bad and The U<span class="contents"><a href="/demo-complicity" class="hover:text-white/80" onclick="event.stopPropagation()">X</a></span>
            </p>
          </a>
        )
      }
      <p class="mt-3 text-lg text-white/70 md:mt-5 md:text-2xl">
        {t("header.tagline")}
      </p>
      <!-- Desktop nav -->
      <nav class="mt-4 hidden gap-1 md:flex">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "rounded-md px-3 py-1.5 text-base font-medium transition-all duration-200",
              link.active
                ? "bg-white/15 text-white"
                : "text-white/90 hover:bg-white/10 hover:text-white",
            ]}
          >
            {link.highlight && <span class="mr-1.5">âœ¨</span>}
            {link.label}
          </a>
        ))}
      </nav>
    </div>
    <!-- Desktop controls -->
    <div class="hidden items-center gap-3 md:flex">
      <LanguageSwitcher client:load currentLang={lang} switchUrl={switchLangUrl} />
      <a
        href="https://github.com/clementbouly/ux-good-patterns"
        target="_blank"
        rel="noopener"
        class="flex h-9 w-9 items-center justify-center rounded-md text-white/60 transition-colors hover:bg-white/10 hover:text-white"
        aria-label={t("header.githubAriaLabel")}
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
        </svg>
      </a>
      <CommandMenu client:load />
      <ThemeToggle client:load />
    </div>
  </div>
</header>
