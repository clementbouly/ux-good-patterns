---
import PageLayout from "@/layouts/PageLayout.astro";
import { ArrowRight } from "lucide-react";
import { ShareButton } from "@/components/ShareButton";
import { articles } from "@/articles";
import { isArticleNew, formatDate } from "@/lib/dateUtils";
import { getLangFromLocale, useTranslations, type Lang } from "@/i18n";

const lang = getLangFromLocale(Astro.currentLocale) as Lang;
const t = useTranslations(lang);
const siteUrl = Astro.site?.toString().replace(/\/$/, "") || "";

// Sort articles by date (newest first)
const sortedArticles = [...articles].sort((a, b) =>
  new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime()
);
---

<PageLayout title={`${t("articles.title")} | The Good, The Bad and The UX`} description={t("articles.description")}>
  <div class="mx-auto max-w-4xl">
    <h1 class="text-3xl font-bold mb-2">{t("articles.title")}</h1>
    <p class="text-muted-foreground mb-8">{t("articles.description")}</p>

    <div class="grid gap-4">
      {sortedArticles.map((article) => (
        <a
          href={`/article/${article.slug}`}
          class="group relative rounded-lg border bg-card p-6 transition-colors hover:bg-muted/50"
        >
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <span class="text-xs text-muted-foreground">{formatDate(article.createdAt, lang)}</span>
              <div class="flex items-center gap-2 mb-1">
                <h2 class="text-xl font-semibold group-hover:underline">{article.title}</h2>
                {isArticleNew(article.createdAt) && (
                  <span class="inline-flex items-center rounded-full bg-red-500 px-2 py-0.5 text-xs font-semibold text-white">
                    {t("common.new")}
                  </span>
                )}
              </div>
              <p class="text-muted-foreground">{article.description}</p>
            </div>
            <ShareButton client:load url={`${siteUrl}/article/${article.slug}`} />
          </div>
          <div class="mt-3 flex flex-wrap gap-2">
            {article.tags.map((tag) => (
              <span class="rounded bg-secondary px-2 py-0.5 text-xs text-secondary-foreground">
                {tag}
              </span>
            ))}
          </div>
          <div class="mt-4 flex items-center gap-1 text-sm font-medium text-primary">
            {t("articles.readArticle")}
            <ArrowRight className="h-4 w-4" />
          </div>
        </a>
      ))}
    </div>

    {sortedArticles.length === 0 && (
      <div class="rounded-lg border border-dashed p-8 text-center text-muted-foreground">
        {t("articles.empty")}
      </div>
    )}
  </div>
</PageLayout>
