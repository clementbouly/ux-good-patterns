---
import { examples } from "@/examples";
import { ExampleCardStatic } from "./ExampleCardStatic";
import { CategoryFilters } from "./CategoryFilters";

const categories = [...new Set(examples.map((e) => e.meta.category))];
---

<CategoryFilters client:load categories={categories} />

<div class="grid gap-6" id="examples-grid">
  {examples.map((example) => (
    <ExampleCardStatic
      client:load
      exampleId={example.meta.id}
      meta={example.meta}
    />
  ))}
</div>
